@model Patient

@{
  ViewBag.Title = "Eliminar Paciente";
}

<h4>Â¿Esta seguro de eliminar el siguiente registro?</h4>
<hr>

<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card hoverable blue">
      <h6 class="card-title u-pt-2 center-align white-text">
        @Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.LastName)
      </h6>

      <div class="card-content white-text">
        <p>
          @Html.DisplayNameFor(model => model.Address):
          <span>
            @Html.DisplayFor(model => model.Address)
          </span>
        </p>

        <p>
          @Html.DisplayNameFor(model => model.PhoneNumber):
          <span>
            @Html.DisplayFor(model => model.PhoneNumber)
          </span>
        </p>

        <p>
          @Html.DisplayNameFor(model => model.Email):
          <span>
            @Html.DisplayFor(model => model.Email)
          </span>
        </p>
      </div>

      <div class="card-action blue-grey">
        <form asp-action="Delete">
          <input type="hidden" asp-for="Id"/>
          <button type="submit" class="waves-effect waves-light btn red">
            <i class="material-icons right">delete</i>
            Eliminar Paciente
          </button>
        </form>

        <div class="change-order">
          <a class="white-text valign-wrapper" asp-action="Index">
            <i class="material-icons">arrow_back</i>
            Volver
          </a>
        </div>
      </div>
    </div>
  </div>
</div>