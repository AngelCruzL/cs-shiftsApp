@model Patient

@{
  ViewBag.Title = $"Editar paciente: {Model.Name} {Model.LastName}";
}

<h4>Editar Paciente: <b>@Model.Name @Model.LastName</b></h4>

<div class="row">
  <form class="col s12" asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id"/>

    <div class="row">
      <div class="input-field col s12 m6">
        <i class="material-icons prefix">account_circle</i>
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text"/>
        <span asp-validation-for="Name"></span>
      </div>

      <div class="input-field col s12 m6">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" type="text"/>
        <span asp-validation-for="LastName"></span>
      </div>
    </div>

    <div class="input-field">
      <i class="material-icons prefix">home</i>
      <label asp-for="Address"></label>
      <input asp-for="Address"/>
      <span asp-validation-for="Address"></span>
    </div>

    <div class="row">
      <div class="input-field col s12 m6">
        <i class="material-icons prefix">phone</i>
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" type="tel"/>
        <span asp-validation-for="PhoneNumber"></span>
      </div>

      <div class="input-field col s12 m6">
        <i class="material-icons prefix">email</i>
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email"/>
        <span asp-validation-for="Email"></span>
      </div>
    </div>

    <div class="page-navigation-links">
      <div>
        <button type="submit" class="waves-effect waves-light btn">
          <i class="material-icons right">save</i>
          Guardar Cambios
        </button>
      </div>

      <div class="change-order">
        <a asp-action="Index" class="waves-effect waves-light btn">
          Volver
          <i class="material-icons left">arrow_back</i>
        </a>
      </div>
    </div>
  </form>
</div>