@model shifts.Models.Medic

@{
  ViewBag.Title = "Agregar Médico";
}

<h4>Médico</h4>

<div>
  <form asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>

    <div>
      <label asp-for="Name"></label>
      <input asp-for="Name"/>
      <span asp-validation-for="Name"></span>
    </div>

    <div>
      <label asp-for="LastName"></label>
      <input asp-for="LastName"/>
      <span asp-validation-for="LastName"></span>
    </div>

    <div>
      <label asp-for="Address"></label>
      <input asp-for="Address"/>
      <span asp-validation-for="Address"></span>
    </div>

    <div>
      <label asp-for="PhoneNumber"></label>
      <input asp-for="PhoneNumber"/>
      <span asp-validation-for="PhoneNumber"></span>
    </div>

    <div>
      <label asp-for="Email"></label>
      <input asp-for="Email"/>
      <span asp-validation-for="Email"></span>
    </div>

    <div>
      <label asp-for="ScheduleFrom"></label>
      <input asp-for="ScheduleFrom"/>
      <span asp-validation-for="ScheduleFrom"></span>
    </div>

    <div>
      <label asp-for="ScheduleUntil"></label>
      <input asp-for="ScheduleUntil"/>
      <span asp-validation-for="ScheduleUntil"></span>
    </div>

    <div>
      <label for="idMedicalSpeciality">Especialidad Médica</label>
      <select
        id="idMedicalSpeciality"
        asp-items="ViewBag.MedicalSpecialities"
        name="idMedicalSpeciality">
      </select>
    </div>

    <div>
      <input type="submit" value="Agregar Médico"/>
    </div>
  </form>
</div>

<div>
  <a asp-action="Index">Volver</a>
</div>