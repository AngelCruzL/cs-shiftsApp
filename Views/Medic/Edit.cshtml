@model shifts.Models.Medic

@{
  ViewBag.Title = $"Editar médico: {Model.Name} {Model.LastName}";
}

<h4>Médico</h4>

<div >
  <form asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id"/>

    <div >
      <label asp-for="Name"></label>
      <input asp-for="Name"/>
      <span asp-validation-for="Name"></span>
    </div>

    <div >
      <label asp-for="LastName"></label>
      <input asp-for="LastName"/>
      <span asp-validation-for="LastName"></span>
    </div>

    <div >
      <label asp-for="Address"></label>
      <input asp-for="Address"/>
      <span asp-validation-for="Address"></span>
    </div>

    <div >
      <label asp-for="PhoneNumber"></label>
      <input asp-for="PhoneNumber"/>
      <span asp-validation-for="PhoneNumber"></span>
    </div>

    <div >
      <label asp-for="Email"></label>
      <input asp-for="Email"/>
      <span asp-validation-for="Email"></span>
    </div>

    <div >
      <label asp-for="ScheduleFrom"></label>
      <input asp-for="ScheduleFrom"/>
      <span asp-validation-for="ScheduleFrom"></span>
    </div>

    <div >
      <label asp-for="ScheduleUntil"></label>
      <input asp-for="ScheduleUntil"/>
      <span asp-validation-for="ScheduleUntil"></span>
    </div>

    <div >
      <input type="submit" value="Guardar Cambios"/>
    </div>
  </form>
</div>

<div>
  <a asp-action="Index">Volver</a>
</div>