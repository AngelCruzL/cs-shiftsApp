@model IEnumerable<Medic>

@{
  ViewBag.Title = "Médicos";
}


<p>
  <a asp-action="Create">Agregar nuevo médico</a>
</p>

<table>
  <thead>
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.Name)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.LastName)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Address)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.PhoneNumber)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Email)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ScheduleFrom)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ScheduleUntil)
    </th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.Name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.LastName)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Address)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.PhoneNumber)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Email)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.ScheduleFrom)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.ScheduleUntil)
      </td>
      <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Detalle</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
      </td>
    </tr>
  }
  </tbody>
</table>